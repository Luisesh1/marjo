<p id="notice"><%= notice %></p>

<h1>Historial de Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Payment</th>
      <th>Estado</th>
      <th>Fecha Pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        
        <td><%= ticket.cantidad %></td>
        <td><%= ticket.payment.id %></td>
        <td><%= ticket.status==0?"aplicable":"No aplicable"%></td>
        <td> <%= Auxiliar.fecha_formato(ticket.updated_at) %></td>
        <td><%= link_to 'Mostrar', ticket %></td>
        <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Cancelar', ticket_path(ticket,ticket:{:status => 3}), target: "_blank", :method=> :put, :confirm => "Are you sure?"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
